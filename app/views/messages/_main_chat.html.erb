<div class="chat-header">
  <div class="chat-header-button">
    <div class="chat-room-name">hoeghoge</div>
    <div class="chat-finish">
      <div class="finish-button">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
  </div>
</div>
<div class="chat-main">
  <div class="chat-content">
    <div class="chat-title">
      <div class="name">Tom</div>
      <div class="date">2025/3/31(WED) 12:43:30</div>
    </div>
    <div class="chat-message">おはよう</div>
  </div>
  <div class="chat-content">
    <div class="chat-title">
      <div class="name">masa</div>
      <div class="date">2025/4/16(WED) 20:43:30</div>
    </div>
    <div class="chat-message">こんばんわ</div>
  </div>
</div>
<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
<%# <div class="chat-footer"> %>
  <div class="message-form">
    <%= f.text_field :content, class: 'message-text', placeholder: 'type a message' %>
    <%# <input type="text" placeholder="type a message" class="message-text"> %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
      <%# <input type="file" class="hidden"> %>
    </label>
  </div>
  <%# <input type="submit" value="送信" class="send"> %>
  <%= f.submit '送信', class: 'send' %>
<% end %>